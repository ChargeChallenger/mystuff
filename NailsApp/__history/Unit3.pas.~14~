{$R *.fmx}


procedure TFormClient.MenuItem2Click(Sender: TObject);
var CurrUser: string; f: TextFile;
begin
  SetCurrentDir('data');
  SetCurrentDir(MenuItem2.Text+'Data');
  if not FileExists('clients.txt') then
  begin
    ShowMessage('Файла не существует. Создаем...');
    AssignFile(f, 'clients.txt');
    Rewrite(f);
    CloseFile(f);
  end
  else
  begin

  end;
end;

end.
