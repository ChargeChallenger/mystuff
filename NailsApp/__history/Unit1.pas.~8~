unit Unit1;

interface

uses
  System.SysUtils, System.Types, System.UITypes, System.Classes, System.Variants,
  FMX.Types, FMX.Controls, FMX.Forms, FMX.Graphics, FMX.Dialogs, FMX.StdCtrls,
  FMX.Edit, FMX.Controls.Presentation, Unit2;

type
  TFormEntering = class(TForm)
    Panel1: TPanel;
    Panel2: TPanel;
    Label1: TLabel;
    Edit1: TEdit;
    Label2: TLabel;
    Edit2: TEdit;
    Button1: TButton;
    Button2: TButton;
    Label3: TLabel;
    Button3: TButton;
    Button4: TButton;
    Button5: TButton;
    procedure Button1Click(Sender: TObject);
    procedure Button2Click(Sender: TObject);
    procedure FormCreate(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  FormEntering: TFormEntering;

implementation

{$R *.fmx}

procedure TFormEntering.Button1Click(Sender: TObject);
begin
  Panel2.Enabled:=true;
end;

procedure TFormEntering.Button2Click(Sender: TObject);
begin
  FormRegistration.ShowModal;
end;

procedure TFormEntering.FormCreate(Sender: TObject);
begin
  if not(DirectoryExists('data')) then
  begin
    ShowMessage('Нет нужных файлов для работы! Программа их сейчас создаст.');
    CreateDir('data');
  end;
end;

end.
