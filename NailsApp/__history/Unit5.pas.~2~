  FMX.Grid.Style, FMX.Grid, FMX.StdCtrls, FMX.DateTimeCtrls, FMX.Edit,
  FMX.ComboEdit, FMX.ScrollBox, FMX.Controls.Presentation, FMX.Calendar;

type
  TForm5 = class(TForm)
    Calendar1: TCalendar;
    StringGrid1: TStringGrid;
    ComboEdit1: TComboEdit;
    ComboEdit2: TComboEdit;
    TimeEdit1: TTimeEdit;
    Календарь: TLabel;
